<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/iv_banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_240dp"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_240dp"
            android:background="@color/gray_banner"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
    />

    <TextView
            android:id="@+id/tv_title"
            android:layout_width="@dimen/dimens_144dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimens_24dp"
            android:text="@string/text_lorem_ipsum"
            android:textColor="@color/white"
            android:textSize="@dimen/size_24sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
    />

    <TextView
            android:id="@+id/tv_overview"
            android:layout_width="@dimen/dimens_240dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginLeft="@dimen/dimens_24dp"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:maxLength="80"
            android:textSize="@dimen/size_14sp"
            android:text="@string/text_lorem_ipsum_long"
            android:textColor="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title"/>

</androidx.constraintlayout.widget.ConstraintLayout>